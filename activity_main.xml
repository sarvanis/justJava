<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.justjava.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/coffee"
        android:id="@+id/img_view"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qty"
        android:padding="@dimen/t_pad"
        android:textColor="@android:color/background_light"
         />
    <Button
        android:id="@+id/btn1"
        android:layout_below="@id/txt1"
        android:layout_width="@dimen/layoutW_H"
        android:layout_height="@dimen/layoutW_H"
        android:layout_marginLeft="@dimen/padLeft"
        android:text="@string/add"
        android:onClick="increment"

        />
   <TextView
        android:id="@+id/quantity_text_view"
        android:layout_below="@id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numval"
        android:paddingLeft="@dimen/padLeft"
       android:textColor="@android:color/background_light"
        android:textSize="@dimen/t_size"
        />

    <Button
        android:layout_width="@dimen/layoutW_H"
        android:layout_height="@dimen/layoutW_H"
        android:layout_below="@id/quantity_text_view"
        android:id="@+id/btn2"
        android:onClick="decrement"
        android:padding="@dimen/b_pad"
        android:layout_marginLeft="@dimen/padLeft"
        android:text="@string/remove"

        />
    <TextView
        android:id="@+id/txt3"
        android:layout_below="@id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textAllCaps="true"
        android:padding="@dimen/t_pad"
        android:textColor="@android:color/background_light"
        />
    <TextView
        android:layout_below="@id/txt3"
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        android:paddingLeft="@dimen/padLeft"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/t_size"
        />
    <Button
        android:layout_below="@id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:padding="@dimen/b_pad"
        android:layout_marginLeft="@dimen/padLeft"
        android:text="@string/order"
        android:onClick="submitOrder"

        />
</RelativeLayout>


</android.support.constraint.ConstraintLayout>
